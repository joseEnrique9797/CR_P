<odoo>
  <data>
        <record model="ir.ui.view" id="res_company_inherited_form">
            <field name="name">res.company.inherited.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']" position="after">
                    <page string="Ajustes reporte RTOP" name="RTOP" invisible="1">
                        <group>
                            <field name="image_rtop" widget="image"/>
                            <field name="street_rtop" />
                            <field name="street_rtop2" />
                            <field name="city_rtop" />
                            <field name="mobil_rtop" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
      
  </data>
</odoo>