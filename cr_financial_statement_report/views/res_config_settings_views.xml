<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.whatsapp</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="22"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='companies_setting_container']" position="inside">
                
                <div class="col-12 col-lg-6 o_setting_box" id="company_details_settings">
                    <div class="o_setting_right_pane">
                        <field name="notify_to" class="font-weight-bold"/>
                        <br/>
                    </div>
                </div>
                
            </xpath>
        </field>
    </record>
</odoo>
